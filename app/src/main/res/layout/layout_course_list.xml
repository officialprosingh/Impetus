<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:scrollbars="vertical"
    app:cardCornerRadius="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addclass_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Introduction to Advertising and Public Relations"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/addclass_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addclass_name"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Paul Benedict"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addclass_name" />

            <TextView
                android:id="@+id/addclass_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addclass_teacher"
                android:text="(3 Hours)"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <Button
                android:id="@+id/addclass_btn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_below="@id/addclass_name"
                android:layout_marginStart="230dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="26dp"
                android:background="@drawable/checkin_btn"
                android:text="Add Class"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addclass_name" />

            <TextView
                android:id="@+id/addclass_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addclass_hour"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="26dp"
                android:text="Location - Colab"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/addclass_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addclass_teacher"
                android:layout_marginStart="246dp"
                android:layout_marginTop="17dp"
                android:text="Location - Colab"
                android:textColor="@color/white"
                android:textSize="16dp" />


        </RelativeLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>