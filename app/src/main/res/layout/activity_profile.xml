<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/profile1"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/layout_bg">

        <Button
            android:id="@+id/profile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/back48" />

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/pro" />

        <TextView
            android:id="@+id/profile_miss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_img"
            android:layout_marginLeft="110dp"
            android:text="We Missed You,"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_miss"
            android:layout_marginLeft="120dp"
            android:text="Parwinder"
            android:textColor="@color/black"
            android:textSize="35dp" />


        <Button
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:width="166dp"
            android:height="58dp"
            android:background="@drawable/button_bg"
            android:text="Change your Email"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <Button
            android:id="@+id/profile_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginStart="200dp"
            android:layout_marginTop="40dp"
            android:width="166dp"
            android:height="58dp"
            android:background="@drawable/button_bg"
            android:text="Change your Password"
            android:textAllCaps="false"
            android:textSize="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/profile1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/layout_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/help50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:text="FAQ / Support"
            android:textColor="@color/black"
            android:textSize="26dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/profile2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/layout_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logout50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:text="Log Out"
            android:textColor="@color/black"
            android:textSize="26dp" />

    </RelativeLayout>

    </RelativeLayout>